---
import Container from "./Container.astro"

const techStack = [
    {
        title: 'Python',
        logo: `./images/python.png`,
        tagClass: "bg-slate-100	 text-nestjsred"
    },
    {
        title: 'NodeJS',
        logo: `./images/nodejs.png`,
        tagClass: "bg-slate-100	 text-nodejsbg"
    },
    {
        title: 'Laravel',
        logo: `./images/laravel.png`,
        tagClass: "bg-nestjsbg text-laravelbg"
    },

    // Frontend
    {
        title: 'ReactJS',
        logo: `./images/react.png`,
        tagClass: "bg-nestjsbg text-reactjs"
    },
    // DBs
    {
        title: 'MySQL',
        logo: `./images/mysql.png`,
        tagClass: "bg-slate-100	 text-mysql"
    },
    {
        title: 'MongoDB',
        logo: `./images/mongodb.png`,
        tagClass: "bg-nestjsbg text-mongodb"
    },
    // Cloud
    {
        title: 'AWS',
        logo: `./images/aws.png`,
        tagClass: "bg-slate-100	 text-aws"
    },    {
        title: 'Azure',
        logo: `./images/azure.png`,
        tagClass: "bg-slate-100	 text-azure"
    },
    {
        title: 'Terraform',
        logo: `./images/terraform.png`,
        tagClass: "bg-slate-100	 text-terraform"
    },
    {
        title: 'Kubernetes',
        logo: `./images/kubernetes.png`,
        tagClass: "bg-slate-100	 text-kubernetes"
    },
]
---

<div class="relative" id="home">
    <div aria-hidden="true" class="absolute inset-0 grid grid-cols-2 space-x-52 opacity-40 dark:opacity-20">
        <div class="blur-[106px] h-56 bg-gradient-to-br from-primary to-purple-400 dark:from-blue-700"></div>
        <div class="blur-[106px] h-32 bg-gradient-to-r from-cyan-400 to-sky-300 dark:to-indigo-600"></div>
    </div>
    <Container>
        <div class="relative pt-36 ml-auto">
            <div class="lg:w-3/4 text-center mx-auto">
                <h1 class="text-gray-900 dark:text-white font-bold text-4xl md:text-6xl xl:text-7xl"><span>Building Solutions </span>for your SaaS: Debts ðŸ”», Growth âœ…. </h1>
                <p class="mt-8 text-gray-700 dark:text-gray-300 text-md md:text-lg">We believe <span class="font-bold text-white">good and balanced engineering</span> should be accessible for all. We build technical solutions that help you get "there"! Be it something from-scratch or a new one, we have something for all.</p>
                <div class="mt-16 flex flex-wrap justify-center gap-y-4 gap-x-6">
                    <a
                      href="https://cal.com/onekind/30min"
                      class="relative flex h-11 w-full items-center justify-center px-6 before:absolute before:inset-0 before:rounded-full before:bg-primary before:transition before:duration-300 hover:before:scale-105 active:duration-75 active:before:scale-95 sm:w-max"
                    >
                      <span class="relative text-base font-semibold text-white"
                        >Book a Call</span
                      >
                    </a>
                </div>
                <div class="hidden py-8 mt-16 border-y border-gray-100 dark:border-gray-800 sm:flex justify-between">
                    <div class="text-left">
                        <h6 class="text-lg font-semibold text-gray-700 dark:text-white">Balanced Solutions</h6>
                        <p class="mt-2 text-gray-500">Just the right amount</p>
                    </div>
                    <div class="text-left">
                        <h6 class="text-lg font-semibold text-gray-700 dark:text-white">Quick Turnaround time</h6>
                        <p class="mt-2 text-gray-500">Even Faster TTM</p>
                    </div>
                    <div class="text-left">
                        <h6 class="text-lg font-semibold text-gray-700 dark:text-white">No BS. No Diplomacy.</h6>
                        <p class="mt-2 text-gray-500">100% Transparent Process</p>
                    </div>
                </div>
            </div>

            <div class="mt-12 grid grid-cols-4 sm:grid-cols-4 md:grid-cols-10">
              {techStack.map(t => (
                <>
                <div class="p-4 grayscale transition duration-200 hover:grayscale-0" data-tooltip-target="tooltip">
                    <img src={t.logo} class="h-12 w-auto mx-auto" loading="lazy" alt="client logo" width="" height="" />
                  </div>          
                </>
              ))}
        </div>
    </Container>
</div>